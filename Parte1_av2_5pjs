import { useState } from 'react';
import { View, StyleSheet, Text,Image, TextInput, Pressable } from 'react-native';

const formValuesInitialState = { user: '', password: ''};

export default function App() {
  const [formValues, setFormValues] = useState(formValuesInitialState);

  return (
    <View style={styles.container}>
    
      <Image style={styles.logo} source={{uri:'https://static.mundoeducacao.uol.com.br/vestibular/vestibular/faeterj-uma-instituicao-vinculada-secretaria-estado-ciencia-tecnologia-rio-janeiro-5a7a0032c571e.jpg'}} />
      <View style={styles.container1}>
      <Text
      style={styles.titulo}>
        Modo de Acesso
      </Text>
      </View>
      <Pressable style={styles.button} onPress={() => { 
        setFormValues(formValuesInitialState)
        }}>
        Modo Aluno
      </Pressable>

     <Pressable style={styles.button} onPress={() => { 
        setFormValues(formValuesInitialState)
        }}>
        Modo Professor
      </Pressable>
      <Pressable style={styles.button} onPress={() => { 
        setFormValues(formValuesInitialState)
        }}>
        Modo Administrativo
      </Pressable>
    </View>
  );
}

